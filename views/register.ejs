<!DOCTYPE html>
<html>
<head>
  <title>Register Your Info</title>
    <% include partials/_metadata.ejs %>
</head>
<body id="register">
<!-- Top nav bar follows this line -->
<header>
  <% include partials/_header.ejs %>
</header>

  <main role="main" class="container-fluid">
    <div class="row">
      <div class="col-md-2"></div>
        <div class="col-md-8">
          <h3>Register Your Info</h3>
        </div>
    </div>
    <div class="row">
      <div class="col-md-2"></div>
        <div class="col-md-8">
          <form method="post" action="/register/addcust" class="form-horizontal">
            <div class="form-group">
              <label for="fullname" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                  <input class="form-control" id="username-field" type="text" placeholder="Full Name" name="Name">
                </div>
            </div>
        <div class="form-group">
          <label for="phone" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
              <input class="form-control" id="phone-field" type="text" name="Phone" placeholder="Gimme yo Digits" >
            </div>
        </div>
          <div class="form-group">
            <div class="col-sm-12">
              <button class="btn btn-primary pull-right">Ready to Order</button>
            </div>
          </div>
        </div>
          </form>
        </div>
    </div>
  </main>
    <% include partials/_footer.ejs %>
</body>
</html>

